<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>student-deliverable</id>
  <formats>
    <format>zip</format>
  </formats>

  <baseDirectory>blackjack</baseDirectory>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/java/</directory>
      <outputDirectory>blackjack_${current.year}/misc/src</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/doc</directory>
      <includes>
        <include>*.pdf</include>
      </includes>
      <outputDirectory>blackjack_${current.year}/doc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/site/apidocs</directory>
      <outputDirectory>blackjack_${current.year}/doc/javadoc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <includes>
        <include>*.jar</include>
      </includes>
      <outputDirectory>blackjack_${current.year}/lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/dependency</directory>
      <includes>
        <include>*.jar</include>
      </includes>
      <outputDirectory>blackjack_${current.year}/lib</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>LICENSE.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>${project.basedir}/drJava/drjava_project_template.xml</source>
      <outputDirectory>blackjack_${current.year}/drjava</outputDirectory>
      <destName>blackjack_${current.year}.drjava</destName>
    </file>
    <file>
      <source>${project.basedir}/src/main/java/student/player/MyPlayer.java</source>
      <outputDirectory>blackjack_${current.year}/drjava/student/player</outputDirectory>
    </file>
  </files>
</assembly>
